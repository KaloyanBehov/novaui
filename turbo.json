{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.test.*", "!**/*.spec.*", "!**/__tests__/**", "!**/vitest.config.*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".vercel/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "inputs": [
        "src/**",
        "!src/**/*.md",
        "**/*.test.*",
        "**/*.spec.*",
        "**/__tests__/**",
        "**/vitest.config.*",
        "**/package.json"
      ],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.md", ".eslintrc*", "eslint.config.*"],
      "outputs": []
    },
    "types:check": {
      "inputs": ["$TURBO_DEFAULT$", "!**/*.test.*", "!**/*.spec.*", "tsconfig.json", "tsconfig.*.json"],
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "format": {
      "inputs": ["**/*.{ts,tsx,js,jsx,json,md}", ".prettierrc*", "prettier.config.*"],
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
