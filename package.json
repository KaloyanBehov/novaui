{
  "name": "novaui-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && rm -f package-lock.json",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore"
  },
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "prettier": "^3.1.1",
    "turbo": "^2.8.9"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.9.0"
}
