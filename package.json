{
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:docs": "turbo run dev --filter=@novaui/docs",
    "build:docs": "turbo run build --filter=@novaui/docs",
    "build:components": "turbo run build --filter=@novaui/components",
    "dev:showcase": "turbo run dev --filter=@novaui/showcase",
    "clean": "pnpm exec turbo run clean 2>/dev/null || true && rm -rf node_modules .pnpm-store .turbo",
    "clean:all": "rm -rf node_modules apps/*/node_modules packages/*/node_modules .pnpm-store .turbo",
    "clean:lock": "rm -rf pnpm-lock.yaml",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "registry:validate": "pnpm --filter @novaui/registry validate",
    "registry:generate": "pnpm --filter @novaui/registry generate",
    "validate:registry": "turbo run validate:registry",
    "publish:cli": "turbo run publish:cli --filter=novaui-cli"
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "@types/react": "~19.1.10",
      "@types/react-dom": "~19.1.7",
      "tailwindcss": "^3.4.19",
      "@novaui/docs>tailwindcss": "^4.1.18"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript"
      ],
      "allowedVersions": {
        "eslint": "9"
      },
      "allowAny": [
        "tailwindcss"
      ]
    }
  },
  "name": "@novaui/monorepo",
  "packageManager": "pnpm@9.9.0"
}
