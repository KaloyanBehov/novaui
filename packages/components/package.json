{
  "name": "novaui-components",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.mjs",
      "require": "./dist/tailwind.js"
    }
  },
  "files": [
    "dist",
    "src",
    "lib",
    "tailwind.ts"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-native": ">=0.72",
    "nativewind": ">=4",
    "tailwindcss": ">=3",
    "class-variance-authority": ">=0.7",
    "clsx": ">=2",
    "tailwind-merge": ">=3",
    "date-fns": ">=4",
    "expo-linear-gradient": ">=13",
    "lucide-react-native": ">=0.300",
    "react-native-gesture-handler": ">=2",
    "react-native-gifted-charts": ">=1",
    "react-native-reanimated": ">=3"
  },
  "peerDependenciesMeta": {
    "expo-linear-gradient": { "optional": true },
    "lucide-react-native": { "optional": true },
    "react-native-gifted-charts": { "optional": true },
    "date-fns": { "optional": true }
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/react": "^18.2.14",
    "tsup": "^8.0.1",
    "typescript": "5.5.4"
  },
  "keywords": [
    "react-native",
    "ui",
    "components",
    "nativewind",
    "tailwindcss",
    "novaui"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KaloyanBehov/novaui"
  },
  "homepage": "https://github.com/KaloyanBehov/novaui#readme",
  "bugs": {
    "url": "https://github.com/KaloyanBehov/novaui/issues"
  }
}
